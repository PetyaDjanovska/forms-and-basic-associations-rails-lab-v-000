<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  <br />
  <%= f.collection_select (:song, :genre_id, Genre.find(:all),
                  :id, :name,
                 {:prompt => 'Please select the genre of this song'})%>
  <input name="song[note_ids][]">

  <%= f.submit %>
<% end %>
